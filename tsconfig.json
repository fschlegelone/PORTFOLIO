{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@": ["."],
      "@/app*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/public/*": ["public/*"],
      "@/data/*": ["data/*"],
      "@/css/*": ["css/*"],
      "@/lib/*": ["lib/*"],
      "@/api/*": ["app/api/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.mjs",
    "./**/*.ts",
    "**/*.jsx",
    "**/*.tsx",
    "**/*.json",
    ".next/types/**/*.ts",
    ".prettier.config.js"
  ],
  "exclude": ["node_modules"]
}
